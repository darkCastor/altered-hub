{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "build:turbo": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:fast": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [],
      "inputs": ["tests/**/*.spec.ts", "tests/**/*.test.ts", "src/**/*.tsx", "src/**/*.ts"]
    },
    "test:unit": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/unit/**/*.vitest.ts", "tests/unit/**/*.test.vitest.ts"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/unit/**/*.vitest.ts", "tests/unit/**/*.test.vitest.ts"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "**/*.test.*", "**/*.spec.*", ".eslintrc*", "eslint.config.*"]
    },
    "lint:fix": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "**/*.test.*", "**/*.spec.*", ".eslintrc*", "eslint.config.*"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "**/*.test.*", "**/*.spec.*", "tsconfig.json", "tsconfig.*.json"]
    },
    "typecheck:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "clean:turbo": {
      "cache": false
    }
  }
}