{
  "name": "altered-hub",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.1.42",
  "scripts": {
    "dev": "vite dev --port 9002",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "format": "prettier --write .",
    "typecheck": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "playwright test",
    "test:unit": "bun test",
    "test:unit:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "clean": "rm -rf .svelte-kit build node_modules/.cache"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.8.0",
    "@xstate/svelte": "^3.0.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "genkit": "^1.8.0",
    "lucide-svelte": "^0.447.0",
    "mode-watcher": "^0.4.1",
    "svelte-sonner": "^0.3.28",
    "tailwind-merge": "^3.0.1",
    "tailwind-variants": "^0.2.1",
    "tailwindcss-animate": "^1.0.7",
    "xstate": "^5.18.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.7.6",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0-alpha.30",
    "@types/node": "^20",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.1",
    "genkit-cli": "^1.8.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "svelte": "^5.2.9",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5",
    "vite": "^6.0.1"
  }
}
